{
	tableID = "exampleAjaxGrid";  
    updateContainerID = "ajaxGridContainer";
    sortable = true;
    canReorder = true;   
    batchSize = 3;
    cssClass = "ajaxGridTable";	 
    cssStyle = "border: thin solid #000000;";  
	evenRowCSSClass = "evenRow";
	oddRowCSSStyle = "background:lightgrey";
    columns = (
		{
			title = "Column 1";		
		 	keyPath = "col1";	
		 	cssClass = "redText"; 
		 	cssStyle = "text-align:left;";
		 	
		},
		{
			title = "Column 2";
		 	keyPath = "col2";
		 	cssStyle = "color: blue;"; 
		},		
		{
			title = "Column 3";
		 	keyPath = "col3";
		},		{
			title = "Column 4";
		 	keyPath = "col4";
		},		
		{
			title = "Column 5";
		 	keyPath = "col5";
		},		
		{
			title = "Date";
		 	keyPath = "date";
		 	formatterClass = "com.webobjects.foundation.NSTimestampFormatter";
		 	cssStyle = "text-align:right;";
		},		
		{
			title = "Employee Number";
		 	keyPath = "number";
		 	formatterClass = "com.webobjects.foundation.NSNumberFormatter";
		 	formatPattern = "[#];[#]";
		 	cssStyle = "text-align:right;";
		},
		{
			title = "Custom Component";
		 	keyPath = "col8";
			component = "GridCellComponent";
			cssStyle = "width: 20px;";
		}
	);
    sortOrder = (
		{
			keyPath = "col1";
			direction = "descending";
		},
		{
			keyPath = "col2";
			direction = "ascending";
		}
	);

}
