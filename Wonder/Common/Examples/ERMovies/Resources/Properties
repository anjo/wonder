log4j.rootCategory=INFO, console

#Bridge logging set to DEBUG
log4j.logger.er.extensions.ERXNSLogLog4jBridge=DEBUG

# A1 is set to be a ConsoleAppender which outputs to System.out.
log4j.appender.console=org.apache.log4j.ConsoleAppender

# A1 uses PatternLayout.
log4j.appender.console.layout = er.extensions.ERXPatternLayout

# A couple of fun patterns
log4j.appender.console.layout.ConversionPattern=%d{HH:mm:ss} %C{1}:%L %p %x- %m%n
#log4j.appender.A1.layout.ConversionPattern=%W{n[i:p s]} %d{yyyy/MM/dd HH:mm:ss} %V{u/f} %p %c %x- %m%n
#log4j.appender.console.layout.ConversionPattern=%W{n[i:p s]} %d{HH:mm:ss} %p %c{1} %x- %m%n

# Enhanced D2W rule tracing:
# First set this one to DEBUG
log4j.logger.er.directtoweb.rules.ERD2WTraceRuleFiringEnabled=INFO

# Then add or modify these setting to DEBUG the ones you want to trace
log4j.logger.er.directtoweb.rules.componentName=DEBUG
log4j.logger.er.directtoweb.rules.customComponentName=DEBUG

