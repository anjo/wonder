<?xml version="1.0" encoding="UTF-8"?>

<project name="webobjects-postbuildhook">
    <target name="post-build-hook">
        <mkdir dir="${build.root}/${framework.name}.framework/Resources" />        
        <copy todir="${build.root}/${framework.name}.framework/Resources" failonerror="true" overwrite="true">
            <fileset    dir="${webserverresources.dir.absolute}" 
                        includes="${webserverresources.dir.includes}" 
                        excludes="${webserverresources.dir.excludes}" />
        </copy>
    </target>
</project>
