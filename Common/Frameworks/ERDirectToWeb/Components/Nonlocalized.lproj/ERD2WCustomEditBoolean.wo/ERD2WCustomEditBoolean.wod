AllowsNull: WOConditional {
	condition = allowsNull;
}

ERXLocalizedString1: ERXLocalizedString {
	value = trueValue.name;
	escapeHTML = false;
}

ERXLocalizedString2: ERXLocalizedString {
	value = falseValue.name;
	escapeHTML = false;
}

ERXLocalizedString3: ERXLocalizedString {
	value = nullValue.name;
	escapeHTML = false;
}

RadioButton1: WORadioButton {
	value = trueValue;
	selection = yesNoBoolean;
	name = radioBoxGroupName;
}

RadioButton2: WORadioButton {
	value = falseValue;
	selection = yesNoBoolean;
	name = radioBoxGroupName;
}

RadioButton3: WORadioButton {
	value = nullValue;
